<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.dressitup.MenuActivity" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin"
        android:src="@drawable/logo"
        android:contentDescription="@string/contentDescription"/>

    <Button
        android:id="@+id/quick_suggestion_btn"
        android:layout_width="@dimen/default_btn_width"
        android:layout_height="@dimen/default_btn_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/quick_suggestion"
        android:background="@drawable/btn_drawable_state_list" 
        android:drawableLeft="@drawable/quick_icon"
        android:paddingLeft="@dimen/default_btn_padding"/>

    <Button
        android:id="@+id/add_clothing_btn"
        android:layout_width="@dimen/default_btn_width"
        android:layout_height="@dimen/default_btn_height"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quick_suggestion_btn"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/add_clothing"
        android:background="@drawable/btn_drawable_state_list" 
        android:drawableLeft="@drawable/add_icon"
        android:paddingLeft="@dimen/default_btn_padding"/>

    <Button
        android:id="@+id/view_closet_button"
        android:layout_width="@dimen/default_btn_width"
        android:layout_height="@dimen/default_btn_height"
       	android:layout_centerHorizontal="true"
        android:layout_below="@id/add_clothing_btn"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/view_closet"
        android:background="@drawable/btn_drawable_state_list" 
        android:drawableLeft="@drawable/closet_icon"
        android:paddingLeft="@dimen/default_btn_padding"/>

</RelativeLayout>